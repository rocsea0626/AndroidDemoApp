<resources>

    <style name="DrawerLayout">
        <item name="android:layout_width">@dimen/nav_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="Title.Navigation" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">@dimen/lineHeightSpacing</item>
    </style>

    <style name="Subtitle.Navigation" parent="Title.Navigation">
        <item name="android:textSize">@dimen/fontSizeSmall</item>
        <item name="android:textColor">@color/colorWhite80</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
